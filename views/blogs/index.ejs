<html>
<%- include('../partials/head') %><!-- pass in title -->


<body>

	<% const name = "this name is stored in JS variable using EJS"; // runs as JS in the server %> 

	<%- include('../partials/nav') // needs relative path; uses minus %>

	<div class="content">
		<h2>All Blogs</h2>
		<% if (blogs.length > 0) { %> <!-- pass in blogs array -->
			<% blogs.forEach(blog => { %>

				<a class='single' href='/blogs/<%= blog._id %>'> <!-- gets blog._id from for each loop -->
					<h3 class="title"><%= blog.title %></h3></a>
					<p class="snippet"><%= blog.snippet%></p>
				</a>
			<% }) %>
		<% } else { %>
			<p>There are no blogs to display.</p>
		<% } %>
	</div>

	<%- include('../partials/footer') %>
</body>
</html>